# =====================================================
# SEATS AERO CLONE - Environment Configuration
# =====================================================
# Copy this file to .env and configure your settings
# =====================================================

# ============== General Settings ==============
LOG_LEVEL=INFO
DEBUG_MODE=false
API_HOST=0.0.0.0
API_PORT=8000

# ============== Rate Limiting ==============
# Global rate limits (requests per second)
GLOBAL_RATE_LIMIT=10
GLOBAL_RATE_LIMIT_PERIOD=60

# Per-program rate limits
UNITED_RATE_LIMIT=2
UNITED_RATE_LIMIT_PERIOD=60
AEROPLAN_RATE_LIMIT=2
AEROPLAN_RATE_LIMIT_PERIOD=60

# ============== Retry Settings ==============
MAX_RETRIES=3
RETRY_BASE_DELAY=5
RETRY_MAX_DELAY=60
RETRY_EXPONENTIAL_BASE=2

# ============== Browser Settings ==============
# Headless mode per program (set to 'false' for debugging)
UNITED_HEADLESS=true
AEROPLAN_HEADLESS=true
DEMO_HEADLESS=true

# Browser timeout settings (seconds)
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=15

# ============== Proxy Configuration ==============
# Enable/disable proxy rotation
USE_PROXIES=false

# Proxy pool (comma-separated, format: protocol://user:pass@host:port)
# Example: PROXY_POOL=http://user:pass@proxy1.example.com:8080,http://user:pass@proxy2.example.com:8080
PROXY_POOL=

# Per-program proxy pools (optional, overrides global)
UNITED_PROXY_POOL=
AEROPLAN_PROXY_POOL=

# Sticky session duration (seconds)
STICKY_SESSION_DURATION=300

# ============== Anti-Detection Settings ==============
# Human-like behavior delays (seconds)
MIN_ACTION_DELAY=0.5
MAX_ACTION_DELAY=2.0
MIN_PAGE_DELAY=2.0
MAX_PAGE_DELAY=5.0

# Jitter range for delays (percentage)
DELAY_JITTER_PCT=0.3

# Fingerprint randomization
RANDOMIZE_VIEWPORT=true
RANDOMIZE_TIMEZONE=true
RANDOMIZE_LOCALE=true

# ============== Cache Settings ==============
# Default cache TTL (seconds)
DEFAULT_CACHE_TTL=3600

# Maximum flights to store in memory
MAX_CACHED_FLIGHTS=10000

# ============== Demo Mode ==============
# Enable demo fallback when all scrapers fail
ENABLE_DEMO_FALLBACK=true

# Number of demo flights to generate
DEMO_FLIGHT_COUNT=10

# ============== Selenium/Chrome Settings ==============
# Path to Chrome binary (leave empty for auto-detect)
CHROME_BINARY_PATH=

# Path to ChromeDriver (leave empty for auto-detect)
CHROMEDRIVER_PATH=

# Chrome user data directory (for session persistence)
CHROME_USER_DATA_DIR=

# ============== Monitoring ==============
# Enable scrape statistics tracking
ENABLE_STATS_TRACKING=true

# Stats retention (number of records)
MAX_STATS_RECORDS=1000

# ============== Advanced ==============
# SSL verification (set to false if having SSL issues - NOT recommended for production)
SSL_VERIFY=true

# Request headers
DEFAULT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
